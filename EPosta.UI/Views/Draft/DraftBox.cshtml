@using EPosta.Entity.Concrete
@model List<Draft>
@{
    ViewData["Title"] = "DraftBox";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<html lang="en">

<body>

    <div class="container-fluid page-body-wrapper">

        <!-- partial:../../partials/_sidebar.html -->
        <!-- partial -->

        <div class="content-wrapper">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Taslak Kutusu</h4>
                        <p class="card-description">
                            Tablo:  <code>.Mesajlarım</code>
                        </p>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Konu</th>
                                        <th>Alıcı</th>
                                        <th>Tarih</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.DraftID</th>
                                            <td>@item.Subject</td>
                                            <td>@item.ReceiverName</td>
                                            <td>@item.Date.ToString("dd.MMM.yyyy")</td>
                                            <td><a href="/Draft/DraftDetail/@item.DraftID" class="btn btn-outline-secondary">Mesajı Gör</a></td>
                                            <td><a href="/Draft/Delete/@item.DraftID" class="btn btn-outline-warning">Sil</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <br />
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- page-body-wrapper ends -->
    </div>

</body>

</html>