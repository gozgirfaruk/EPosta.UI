@model EPosta.Entity.Concrete.Draft
@{
    ViewData["Title"] = "DraftDetail";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Taslak Metin İçeriği</h4>

            <form class="forms-sample">
                <div class="form-group">
                    @Html.TextBoxFor(x => x.DraftID, new { @type = "hidden" })
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Alıcı Mail</label>
                    @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Konu</label>
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword4">Mesaj</label>
                    @Html.TextAreaFor(x => x.Description, 20, 50, new { @class = "form-control" })
                </div>
               
                <a href="/Draft/DraftBox" class="btn btn-secondary">Geri Dön</a>
            </form>
        </div>
    </div>
</div>