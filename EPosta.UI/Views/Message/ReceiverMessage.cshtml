@using EPosta.Entity.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<AppMessage>
@{
    ViewData["Title"] = "ReceiverMessage";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<html lang="en">

<body>

    <div class="container-fluid page-body-wrapper">

        <!-- partial:../../partials/_sidebar.html -->
        <!-- partial -->

        <div class="content-wrapper">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">GELEN KUTUSU</h4>
                        <p class="card-description">
                            Tablo:  <code>.Mesajlarım</code>
                        </p>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Konu</th>
                                        <th>Gönderen</th>
                                        <th>Tarih</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.AppMessageID</th>
                                            <td>@item.Subject</td>
                                            <td><img src="@item.ImageUrl" />  @item.SenderName</td>
                                            <td>@item.Date.ToString("dd.MMM.yyyy")</td>
                                            <td><a href="/Message/ReceiverMessageDetail/@item.AppMessageID" class="btn btn-outline-secondary">Mesajı Gör</a></td>
                                            <td><a href="/Message/Delete/@item.AppMessageID" class="btn btn-outline-danger">Sil</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <br />
                            @Html.PagedListPager((IPagedList)Model, page => Url.Action("ReceiverMessage", new { page }))
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- page-body-wrapper ends -->
    </div>

</body>

</html>