@model EPosta.UI.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Bilgilerini Düzenle</h4>
          
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Adınız</label>
                    <input type="text" class="form-control" asp-for="FirstName" id="exampleInputName1" required >
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Soyadınız</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" asp-for="LastName" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" placeholder="Şifre">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre Tekrar</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" placeholder="Şifre Yeniden">
                </div>
                
                <div class="form-group">
                    <label>Profil Resmi</label>
                    <input type="file" asp-for="PictureURL" >
                    @* <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Seç">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Yükle</button>
                        </span>
                    </div> *@
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a href="/Login/LogOut" class="btn btn-light">Çıkış Yap</a>
            </form>
        </div>
    </div>
</div>
